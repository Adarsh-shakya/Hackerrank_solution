import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
       Scanner sca =new Scanner(System.in);
        String st=sca.nextLine();
        int count=0;
        for(int i=0;i<st.length()-1;i++){
            if(st.charAt(i)==st.charAt(i+1)){
              count++;  
            }
        }
       System.out.println(count); 
    }
}
